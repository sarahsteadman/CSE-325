@page
@model MyScriptureJournal.Pages.Scriptures.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>New Scripture</h1>

<hr />
<div>
    <div>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="scripture-form">
                <div class="input-area">
                    <div>
                        <label asp-for="Scripture.Book" class="control-label"></label>
                        <input asp-for="Scripture.Book" class="form-control" />
                        <span asp-validation-for="Scripture.Book" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Scripture.Chapter" class="control-label"></label>
                        <input asp-for="Scripture.Chapter" class="form-control" />
                        <span asp-validation-for="Scripture.Chapter" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Scripture.Verses" class="control-label"></label>
                        <input asp-for="Scripture.Verses" class="form-control" />
                        <span asp-validation-for="Scripture.Verses" class="text-danger"></span>
                    </div>
                </div>
                <div class="input-area">
                    <div class="form-group2">
                        <label asp-for="Scripture.Text" class="control-label"></label>
                        <textarea class="text-input" asp-for="Scripture.Text" class="form-control"></textarea>
                        <span asp-validation-for="Scripture.Text" class="text-danger"></span>
                    </div>
                    <div class="form-group3">
                        <label asp-for="Scripture.Notes" class="control-label"></label>
                        <textarea class="note-input" asp-for="Scripture.Notes" class="form-control"></textarea>
                        <span asp-validation-for="Scripture.Notes" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input class="buttons" type="submit" value="Create"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="link" asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
